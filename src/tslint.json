{
    "extends": "../tslint.json",
    "quotemark": [true, "single"],
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "semicolon": false,
        "prefer-const": [false, {"destructuring": "all"}]
    }
}
